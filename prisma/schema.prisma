datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id        Int            @id @default(autoincrement())
  slug      String         @unique
  name      String
  bio       String?
  avatarUrl String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  links     ProfileLink[]
}

model ProfileLink {
  id        Int           @id @default(autoincrement())
  profileId Int
  profile   Profile       @relation(fields: [profileId], references: [id])

  title     String
  url       String
  category  LinkCategory  @default(AFFILIATION)
  position  Int           @default(0)
  clicks    Int           @default(0)
  createdAt DateTime      @default(now())
}

enum LinkCategory {
  WORK
  AFFILIATION
}
